<h1>
Racing News
</h1>

<div><%= user_signed_in? && policy(Post).new? ? link_to('New Post', posts_new_path, class: "btn btn-primary") : "" %></div>

<% @posts.each do |post| %>
  <div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <%= cl_image_tag(post.image.key, class: "img-fluid rounded-start", cloud_name: ENV['CLOUDINARY_CLOUD_NAME']) if post.image.attached? %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= link_to post.title, post %></h5>
        <p class="card-text"> by <%= post.user.name %></p>
        <% if post.updated_at? %>
          <p class="card-text"><small class="text-muted">Updated: <%= post.updated_at %></small></p>
        <% else %>
          <p class="card-text"><small class="text-muted">Created: <%= post.created_at %></small></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>


