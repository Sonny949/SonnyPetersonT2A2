<% if @listings.any? %>
    <div class="bg-dark">
    <h1 class="text-white mx-1"><%= @category.name %></h1>

    <% @listings.each do |listing| %>
    <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
        <%= cl_image_tag(listing.images.first.key, class: "img-fluid rounded-start", cloud_name: ENV['CLOUDINARY_CLOUD_NAME']) if listing.images.attached? %>
        </div>
        <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title"><%= link_to listing.title, listing_path(listing.id) %></h5>
            <p class="card-text">Seller: <%= listing.user.name %></p>
            <p class="card-text"><small class="text-muted">Listed: <%= listing.created_at %></small></p>
        </div>
        </div>
    </div>
    </div>
    <% end %>
 <% else %> 
     <p class="text-white mx-1">There are currently no listings in this category</p> %>
<% end %>
<br>
</div>