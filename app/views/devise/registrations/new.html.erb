<h2>Sign up</h2>

<%= nested_form_for([resource_name, resource.with_address], url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>

  <h3>Address</h3>

  <%= f.fields_for :address do |ui|%>
    <div class="field">
      <%= ui.label :address_first %><br />
      <%= ui.text_field :address_first %>
    </div>

    <div class="field">
      <%= ui.label :address_second %><br />
      <%= ui.text_field :address_second %>
    </div>

    <div class="field">
      <%= ui.label :city %><br />
      <%= ui.text_field :city %>
    </div>

    <div class="field">
      <%= ui.label :state %><br />
      <%= ui.select(:state, options_for_select([['VIC', 'VIC'], ['NSW', 'NSW'], ['ACT', 'ACT'], ['QLD', 'QLD'], ['SA', 'SA'], ['WA', 'WA'], ['NT', 'NT'], ['TAS', 'TAS']])) %>
    </div>

    <div class="field">
      <%= ui.label :postcode %><br />
      <%= ui.text_field :postcode %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
