<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= nested_form_for([resource_name, resource.with_address], url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>

  <h3>Address</h3>

  <%= f.fields_for :address do |ui|%>
    <div class="field">
      <%= ui.label :address_first %><br />
      <%= ui.text_field :address_first %>
    </div>

    <div class="field">
      <%= ui.label :address_second %><br />
      <%= ui.text_field :address_second %>
    </div>

    <div class="field">
      <%= ui.label :city %><br />
      <%= ui.text_field :city %>
    </div>

    <div class="field">
      <%= ui.label :state %><br />
      <%= ui.select(:state, options_for_select([['VIC', 'VIC'], ['NSW', 'NSW'], ['ACT', 'ACT'], ['QLD', 'QLD'], ['SA', 'SA'], ['WA', 'WA'], ['NT', 'NT'], ['TAS', 'TAS']])) %>
    </div>

    <div class="field">
      <%= ui.label :postcode %><br />
      <%= ui.text_field :postcode %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
