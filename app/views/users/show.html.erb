  <h4 class="m-2">Name</h4>
  <p class="mx-2 mb-2"><%= current_user.name %></p>
  <h4 class="m-2">Details</h4>
  <p class="m-2"><%= link_to "Edit My Details", edit_user_registration_path %></p>
  <h4 class="m-2">My Listings</h4>
  <% if current_user.listings.any? %>
    <% current_user.listings.each do |listing| %>
      <p class="m-2"><%= link_to listing.title, listing %></p>
    <% end %>
